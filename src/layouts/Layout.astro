---
import '@/styles/globals.css'
// import { SEO } from 'astro-seo'
import { Navbar } from '@/components/Navbar'
import ViewTransitions from 'astro/components/ViewTransitions.astro'
import Footer from '@/components/Footer'

export interface Props {
  title?: string
  openGraphImage?: string
  description?: string
}

const siteConfig = {
  title: 'Rock Your Astro (Blank)',
  description: 'Site description',
  author: 'Oodri',
}

const { title = siteConfig.title, description = siteConfig.description, openGraphImage } = Astro.props

const { pathname } = Astro.url
---

<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta http-equiv="Permissions-Policy" content="interest-cohort=()" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>

    <ViewTransitions />
  </head>
  <body class="flex flex-col">
    <Navbar client:load pathname={pathname} />

    <main
      class="flex flex-col items-center justify-center flex-grow p-2 w-full px-6 py-8 sm:py-20 sm:px-10 min-h-screen"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
